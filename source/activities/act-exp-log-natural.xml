	      <table xml:id="T-act-natural-e">
		<title>Valores de <m>y = E(t)</m>.</title>
		<tabular>
		  <row bottom="minor" halign="center">
		    <cell><m>t</m></cell>
		    <cell><m>-2</m></cell>
		    <cell><m>-1</m></cell>
		    <cell><m>0</m></cell>
		    <cell><m>1</m></cell>
		    <cell><m>2</m></cell>
		  </row>
		  <row>
		    <cell><m>E(t)=e^t</m></cell>
		    <cell><m>e^{-2} \approx 0.135</m></cell>
		    <cell></cell>
		    <cell></cell>
		    <cell></cell>
		    <cell></cell>
		  </row>
		</tabular>
	      </table>

	      <table xml:id="T-act-natural-log">
		<title>Valores de <m>t = N(y)</m>.</title>
		<tabular>
		  <row bottom="minor" halign="center">
		    <cell><m>y</m></cell>
		    <cell><m>e^{-2}</m></cell>
		    <cell><m>e^{-1}</m></cell>
		    <cell><m>1</m></cell>
		    <cell><m>e^1</m></cell>
		    <cell><m>e^2</m></cell>
		  </row>
		  <row>
		    <cell><m>N(y)=\ln(y)</m></cell>
		    <cell><m>-2</m></cell>
		    <cell></cell>
		    <cell></cell>
		    <cell></cell>
		    <cell></cell>
		  </row>
		</tabular>
	      </table>
	    </p>

